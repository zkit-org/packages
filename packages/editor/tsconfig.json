{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@easykit/editor": [
                "./lib/index.ts"
            ]
        },
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "next-env.d.ts",
        "global.d.ts",
        "lib/**/*.ts",
        "lib/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}

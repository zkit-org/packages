{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@easykit/design": [
                "./lib/index.ts"
            ],
            "@easykit/design/*": [
                "./lib/*"
            ]
        },
        "jsx": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}

{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "root": true,
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":BUN:",
              ":NODE:",
              ":PATH:",
              ":PACKAGE_WITH_PROTOCOL:",
              ":URL:",
              ":BLANK_LINE:",
              [
                "npm:*",
                "npm:*/**"
              ],
              [
                "react"
              ],
              [
                ":PACKAGE:",
                "!@easykit/**"
              ],
              [
                "@easykit/**"
              ],
              [
                ":ALIAS:",
                "!**/*.css"
              ],
              [
                "**/*.css"
              ]
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedKeys": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/*.svg",
      "!**/.next/**",
      "!**/pnpm-lock.yaml",
      "!**/node_modules/**",
      "!**/packages/design/src/components/ui/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "includes": [
      "**",
      "!**/*/generated-new.ts",
      "!**/*/generated-v2.ts",
      "!**/node_modules/**",
      "!**/packages/design/src/components/ui/**"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120
    },
    "linter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "next": "recommended"
    },
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/packages/design/src/components/ui/**"
    ],
    "rules": {
      "recommended": true,
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      },
      "complexity": {},
      "correctness": {
        "noNodejsModules": "off",
        "noUndeclaredDependencies": "off",
        "useExhaustiveDependencies": "info",
        "useImportExtensions": "off"
      },
      "nursery": {
        "noSecrets": "off",
        "useExplicitType": "off",
        "useSortedClasses": {
          "fix": "safe",
          "level": "info",
          "options": {
            "attributes": [
              "classList"
            ],
            "functions": [
              "cn",
              "clsx",
              "cva",
              "tw"
            ]
          }
        }
      },
      "performance": {
        "noBarrelFile": "off",
        "noNamespaceImport": "off"
      },
      "security": {},
      "style": {
        "noDefaultExport": "off",
        "noEnum": "off",
        "noImplicitBoolean": "off",
        "noInferrableTypes": "error",
        "noNestedTernary": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "error",
        "noProcessEnv": "off",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "useAsConstAssertion": "error",
        "useBlockStatements": "off",
        "useComponentExportOnlyModules": "off",
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useExplicitLengthCheck": "off",
        "useNamingConvention": "off",
        "useNumberNamespace": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noConsole": "off",
        "noDuplicateObjectKeys": "error",
        "noExplicitAny": "warn",
        "noReactSpecificProps": "off"
      }
    }
  }
}
